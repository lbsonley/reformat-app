{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2021",
    "lib": ["es2021", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
        "*": [
            "node_modules/*"
        ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "generated/**/*"
  ]
}