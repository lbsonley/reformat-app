datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "./generated/type-graphql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  firstName String
  lastName String
  language Languages
  animal String?
  talent String?
  talentEnergy TalentEnergies?
  heroJourneyProgress Archetypes?
  archetype Archetype? @relation(fields: [archetypeId], references: [id])
  archetypeId Archetypes?
  lifeJourney LifeJourney? @relation(fields: [lifeJourneyId], references: [id])
  lifeJourneyId LifeJourneys?
}

model Archetype {
  id Archetypes @id
  name String
  users User[]
}

model LifeJourney {
  id LifeJourneys @id
  name String
  users User[]
}

enum Archetypes {
  mentor
  herald
  gatekeeper
  joker
}

enum LifeJourneys {
  learn
  stand
  resolve
}

enum TalentEnergies {
  push
  neutral
  pull
}

enum Languages {
  de
  en
  fr
  it
}
